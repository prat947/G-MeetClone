<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <script>
      const ROOM_ID = "<%= roomId %>";
      const NAME = "<%= name %>";
    </script>
    <script
      src="https://unpkg.com/peerjs@1.4.5/dist/peerjs.min.js"
      defer
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      defer
    ></script>
    <script src="script.js" defer></script>
    <link rel="stylesheet" href="styles.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="main">
      <div class="main_left">
        <div class="Sch">
          <a href="http://localhost:3000/schedule">Schedule a meet</a>
          <p>Logged in as : <%=name%></p>
          <p>Email : <%=email%></p>
        </div>

        <div class="main_videos">
          <div id="video-grid"></div>
        </div>
        <div class="canvas">
          <canvas id="board"></canvas>
        </div>
        <div class="controls">
          <div class="main__controls__block">
            <div class="main__controls__button main__mute_button">
              <i class="fas fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div
              onclick="playStop()"
              class="main__controls__button main__video_button"
            >
              <i class="fas fa-video"></i>
              <span>Stop Video</span>
            </div>
          </div>
          <div class="main__controls__block">
            <div class="main__controls__button whiteboard">
              <i class="fas fa-chalkboard-teacher"></i>
              <span>Whiteboard</span>
            </div>
            <div class="main__controls__button screenshare">
              <i class="fas fa-desktop"></i>
              <span>Share Screen</span>
            </div>
          </div>
          <div class="main__controls__block">
            <div class="main__controls__button leavemeet">
              <span class="leave_meeting">Leave Meeting</span>
            </div>
          </div>
        </div>
      </div>
      <div class="main_right">
        <div class="chat_header">
          <h3>Chat</h3>
        </div>
        <div id="chat_window"></div>
        <div class="msgtypewindow">
          <input id="typemsg" type="text" placeholder="Type your message.." />
        </div>
      </div>
    </div>
  </body>
</html>
